citHeader("To cite package 'stringi' in publications use:")

citEntry(entry = "Manual",
  title        = "stringi: THE string processing package for R",
  author       = personList(as.person("Marek Gagolewski"), as.person("Bartlomiej Tartanus")),
  year         = "2014",
  url          = "http://stringi.rexamine.com",
  textVersion  =
  paste("Gagolewski M., Tartanus B. (2014).",
        "stringi: THE string processing package for R.",
        "http://stringi.rexamine.com/.")
)
